<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp" >

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/set_note_textView1" />

    <TextView
        android:id="@+id/set_note_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:text="设置事件：" />

    <TextView
        android:id="@+id/set_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/show_time_textView"
        android:layout_alignBottom="@+id/show_time_textView"
        android:layout_alignLeft="@+id/spinner1"
         android:layout_marginLeft="20dp"
        android:text="显示时间：" />

    <TextView
        android:id="@+id/show_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/set_note_textView1"
        android:layout_above="@+id/spinner1"
        android:text="设置时间:" />

</RelativeLayout>
